# =============================================================================
# Sales Tracking CRM - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# SUPABASE (Required)
# =============================================================================
# Get from: Supabase Dashboard -> Project Settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# GOOGLE WORKSPACE (Required for Google integrations)
# =============================================================================
# Get from: Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-secret

# Google Picker API - Get from: Google Cloud Console -> APIs & Services -> Credentials -> API Keys
NEXT_PUBLIC_GOOGLE_API_KEY=your-api-key

# Google Client ID for client-side (same as GOOGLE_CLIENT_ID, needed for Picker)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# =============================================================================
# ANTHROPIC AI (Required for AI features)
# =============================================================================
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# EMAIL / SMTP CONFIGURATION (Required for email notifications)
# =============================================================================
# SMTP server settings (Gmail example below)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# From address for outgoing emails
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Sales Tracking CRM

# Email testing (optional)
EMAIL_TEST_MODE=false
EMAIL_TEST_RECIPIENT=test@example.com

# =============================================================================
# ERROR MONITORING (Optional)
# =============================================================================
# Sentry DSN - Get from: https://sentry.io/settings/projects/
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# LOGGING (Optional)
# =============================================================================
# Log level: error | warn | info | debug
LOG_LEVEL=info

# =============================================================================
# DATABASE (Optional - Supabase provides this)
# =============================================================================
DATABASE_URL=

# =============================================================================
# TESTING (Optional)
# =============================================================================
# Enable E2E test mode (bypasses RLS)
E2E_TEST_MODE=false

# Test user credentials for Playwright tests
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test-password

# =============================================================================
# BACKGROUND JOBS (Optional)
# =============================================================================
# Secret for authorizing cron job requests
CRON_SECRET=your-random-secret-here

# =============================================================================
# APPLICATION (Optional)
# =============================================================================
# Public URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3003
